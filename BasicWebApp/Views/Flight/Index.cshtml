@model IEnumerable<BasicWebApp.Models.db.Flight>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@if (Model.Count() <= 0)
{
    <div class="alert alert-danger">No data found</div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.FlightId)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.FlightNumber)
                </td>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.FlightId
                    </td>
                    <td>
                        @item.FlightNumber
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.FlightId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.FlightId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.FlightId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}