@model IEnumerable<BasicWebApp.Models.db.Ticket>

<h2>Tickets</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Passenger</th>
            <th>Flight</th>
            <th>Airport</th>
            <th>Seat</th>
            <th>Gate</th>
            <th>Zone</th>
            <th>Seq</th>
            <th>Depart</th>
            <th>Boarding</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.Pass?.PassName</td>
                <td>@ticket.Flight?.FlightNumber</td>
                <td>@ticket.Airport?.AirportName</td>
                <td>@ticket.SeatNumber</td>
                <td>@ticket.Gate</td>
                <td>@ticket.Zone</td>
                <td>@ticket.Seq</td>
                <td>@ticket.DepartDate?.ToString("dd MMM yyyy HH:mm tt")</td>
                <td>@ticket.Boarding?.ToString("dd MMM yyyy HH:mm tt")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@ticket.TicketId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@ticket.TicketId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@ticket.TicketId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
